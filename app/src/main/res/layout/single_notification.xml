<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="horizontal">

    <ImageView
        android:layout_height="70dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView6"
        android:contentDescription=""
        android:layout_weight="0.06"
        tools:ignore="ContentDescription,InefficientWeight,ObsoleteLayoutParam"
        android:layout_width="70dp" />

    <TextView
        android:text="[user name]"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="13dp"
        android:id="@+id/txt_user"
        tools:ignore="HardcodedText" />

    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_date"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/txt_user"
        android:layout_alignLeft="@+id/txt_user"
        android:layout_alignStart="@+id/txt_user"
        tools:ignore="HardcodedText,SmallSp"
        android:textSize="10sp" />

    <TextView
        android:text="Notification type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_notification"
        tools:ignore="HardcodedText"
        android:layout_alignBaseline="@+id/txt_user"
        android:layout_alignBottom="@+id/txt_user"
        android:layout_toRightOf="@+id/txt_user"
        android:layout_toEndOf="@+id/txt_user"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

</RelativeLayout>