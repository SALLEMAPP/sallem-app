<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/commentLayout_imgUserAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:minHeight="55dp"
        android:minWidth="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_me_24px"
        tools:layout_editor_absoluteX="6dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/commentLayout_lblUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/showPost_lblPostDate"
        android:layout_alignStart="@+id/showPost_lblPostDate"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/sallemBlack"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/commentLayout_imgUserAvatar"
        app:layout_constraintTop_toTopOf="@+id/commentLayout_imgUserAvatar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/commentLayout_imgUserAvatar"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/commentLayout_postDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/postLayout_imgUserAvatar"
        android:layout_toRightOf="@+id/postLayout_imgUserAvatar"
        android:text="TextView"
        android:textColor="@color/sallemBlack"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/commentLayout_lblUserName"
        app:layout_constraintBottom_toBottomOf="@+id/commentLayout_imgUserAvatar"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/commentLayout_lblUserName" />

    <TextView
        android:id="@+id/commentLayout_lblComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/commentLayout_postDate"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>
