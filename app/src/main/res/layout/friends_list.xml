<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
  <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_account_circle_black_24dp"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/img_friend_avatar"
      android:layout_marginLeft="10dp"
      android:minHeight="55dp"
      android:minWidth="55dp"
      android:layout_marginTop="10dp" />

    <TextView
    android:text="TextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
    android:layout_marginStart="13dp"
    android:id="@+id/lbl_friend_name"
        android:ems="16"
        android:layout_alignBottom="@+id/img_friend_avatar"
        android:layout_toRightOf="@+id/img_friend_avatar"
        android:layout_toEndOf="@+id/img_friend_avatar"
        android:layout_marginBottom="13dp"
        tools:textColor="@color/sallemBlack" />


</RelativeLayout>