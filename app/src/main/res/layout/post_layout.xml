<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_layout_post_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_me_24px"
            android:id="@+id/post_layout_user_avatar"
            android:minHeight="55dp"
            android:minWidth="55dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_layout_lbl_post_date"
            android:layout_alignLeft="@+id/post_layout_lbl_user_name"
            android:layout_alignStart="@+id/post_layout_lbl_user_name"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_layout_lbl_user_name"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toRightOf="@+id/post_layout_user_avatar"
            android:layout_toEndOf="@+id/post_layout_user_avatar"
            android:layout_below="@+id/post_layout_lbl_post_date"
            android:textSize="10sp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_layout_post_content"
        android:layout_below="@+id/post_layout_post_header"
        android:layout_marginBottom="5dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:layout_marginTop="22dp"
            android:id="@+id/post_layout_txt_post_subject"
            android:layout_below="@+id/post_layout_user_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            android:id="@+id/post_layout_img_post_image"
            android:layout_below="@+id/post_layout_txt_post_subject"
            android:layout_alignLeft="@+id/post_layout_txt_post_subject"
            android:layout_alignStart="@+id/post_layout_txt_post_subject" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/post_layout_post_comment"
        android:layout_below="@+id/post_layout_post_content"
        android:layout_marginBottom="5dp">

        <Button
            android:text="Comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_layout_btn_comments"
            android:background="@color/sallemBlue"
            android:textColor="@color/sallemWhite"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:layout_below="@+id/post_layout_btn_comments"
            android:layout_alignLeft="@+id/post_layout_img_post_image"
            android:layout_alignStart="@+id/post_layout_img_post_image"
            android:id="@+id/post_layout_txt_quich_comment" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post_layout_btn_add_comment"
            android:drawableRight="@drawable/ic_send"
            android:background="@color/sallemBlue"
            android:gravity="right"
            android:layout_alignTop="@+id/post_layout_txt_quich_comment"
            android:layout_toRightOf="@+id/post_layout_txt_quich_comment"
            android:layout_toEndOf="@+id/post_layout_txt_quich_comment" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/post_layout_post_separator"
        android:layout_below="@+id/post_layout_post_comment" />

</RelativeLayout>